<center><h1>Details Of All The Users Registered Till Now...</h1>
<table border="2">
  <tr>
	<th>First Name</th>
	<th>Last Name</th>
	<th>Email</th>
	<th>Mobile</th>
	<th colspan="3"></th>
	</tr>

	<% @users.each do |user| %>
	<tr>
	 <td><%= user.first_name %></td>
	 <td><%= user.last_name %></td>
	 <td><%= user.email %></td>
	 <td><%= user.mobile %></td>
	 <td><%= link_to 'View Profile', user_path(user) %></td>
	 <td><%= link_to 'Delete', user,
	 												method: :delete,
	 												data: {confirm: 'Are You Sure..??'} %></td>
	 </tr>
	 <% end %>
	 </table><br>
	 <%= link_to 'Create New User', new_user_path %>
	 &nbsp; &nbsp;
	 <%= link_to 'Show All Users', users_path %>
	 </center>